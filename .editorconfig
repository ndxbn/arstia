[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4

[{*.*rc,*.config,*.conf}]
indent_style=space
indent_size=2

[*.js]
indent_style=space
indent_size=2

[*.json]
indent_style=space
indent_size=2

[{*.ts,*.ats}]
indent_style=space
tab_width=2

[{*.ddl,*.sql}]
indent_style=space
indent_size=2

[*.less]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[tslint.json]
indent_style=space
indent_size=2
